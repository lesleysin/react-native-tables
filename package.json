{
  "name": "@lesleysin/react-native-tables",
  "version": "1.0.0",
  "description": "Simple and fast table component for React Native with extensive configuration options",
  "main": "dist/commonjs/index.js",
  "scripts": {
    "prepare": "bob build",
    "lint": "eslint --ext .tsx --ext .ts src/",
    "test": "jest",
    "coverage": "jest --verbose --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lesleysin/react-native-tables.git"
  },
  "keywords": [
    "react-native",
    "ios", 
    "android",
    "table",
    "dataset"
  ],
  "author": "lesleysin",
  "license": "MIT",
  "react-native": "src/index.ts",
  "module": "dist/module/index.js",
  "types": "dist/typescript/index.d.ts",
  "modulePaths": [
    "./src"
  ],
  "bugs": {
    "url": "https://github.com/lesleysin/react-native-tables/issues"
  },
  "files": [
    "src",
    "dist",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "@react-native-community/bob": {
    "source": "src",
    "output": "dist",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ],
  "peerDependencies": {
    "react": "^18.2.0",
    "react-native": "0.68.2"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@react-native-community/bob": "^0.17.1",
    "@testing-library/react-native": "^11.3.0",
    "@types/events": "^3.0.0",
    "@types/jest": "^29.2.0",
    "@types/react": "^18.0.21",
    "@types/react-native": "^0.70.4",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "babel-jest": "^29.2.1",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.31.10",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "^0.73.2",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-native": "0.68.2",
    "react-test-renderer": "^18.2.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "dayjs": "^1.11.5",
    "events": "^3.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "/__tests__/.*\\.(test|spec)\\.(js|tsx?)$",
    "transformIgnorePatterns": [
      "node_modules/(?!(@react-native|react-native|react-native-iphone-x-helper)/)"
    ],
    "preset": "react-native"
  }
}
